<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_margin="2dp"
    android:background="@color/white"
    android:layout_height="185dp">
<LinearLayout
    android:layout_marginTop="20dp"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <ImageView
        android:id="@+id/cpm"
        android:layout_marginLeft="10dp"
        android:src="@drawable/myntra"
        android:layout_gravity="center"
        android:background="@drawable/back_border"
        android:layout_width="40dp"
        android:layout_height="40dp" />
    <View
        android:layout_width="2dp"
        android:background="#000"
        android:layout_gravity="center"
        android:layout_height="30dp">

    </View>
<TextView
    android:id="@+id/cpn_txt"
    android:text="MYNTRA"
    android:layout_marginLeft="2dp"

    android:textSize="20sp"
    android:background="@drawable/back_border"
    android:textColor="#000"
    android:layout_gravity="center"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content" />

</LinearLayout>
<TextView
    android:layout_marginLeft="20dp"
    android:layout_marginTop="15dp"
    android:id="@+id/main_off"

    android:textColor="#000"
    android:textSize="18sp"
    android:text="Flat Rs. 250 off on Myntra"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content" />
    <TextView
        android:layout_marginLeft="20dp"
        android:layout_marginTop="5dp"
        android:id="@+id/main_off_des"
        android:fontFamily="@font/clear_sans_regular"
        android:text="Get Rs.250 Myntra Voucher within 7 days of your order Delivery"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp">
        <TextView
            android:layout_marginLeft="20dp"
            android:id="@+id/main_off_time"
            android:fontFamily="@font/clear_sans_regular"
            android:text="29.05.20202"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <Button
            android:layout_marginRight="10dp"
            android:layout_gravity="center"
            android:textColor="@color/colorAccent"
            android:fontFamily="@font/clearsansbold"
            android:text="Apply"
            android:textSize="12sp"
            android:background="#EFEFEF"
            android:id="@+id/cpn_apply_btn"
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:layout_alignParentRight="true"/>
    </RelativeLayout>
    <View
        android:layout_marginTop="5dp"
        android:layout_below="@+id/delete_btn"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:background="@color/light_gray"
        android:layout_width="match_parent"
        android:layout_height="2dp">

    </View>
</LinearLayout>