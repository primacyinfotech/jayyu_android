<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:background="@color/white"
    android:layout_height="match_parent">
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <LinearLayout
                android:layout_marginTop="10dp"
                android:background="@color/white"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:id="@+id/offer_title"
                    android:textColor="#000"
                    android:text="TITLE"
                    android:textSize="20dp"
                    android:textStyle="bold"
                    android:layout_marginLeft="10dp"
                    android:layout_width="320dp"
                    android:layout_height="wrap_content" />

                <ImageView

                    android:id="@+id/close_full_img"
                    android:layout_width="24dp"
                    android:layout_height="24dp"


                    android:src="@drawable/close">
                </ImageView>
            </LinearLayout>
            <View
                android:layout_marginTop="10dp"
                android:background="@color/light_gray"
                android:layout_width="match_parent"
                android:layout_height="3dp">

            </View>
            <LinearLayout
                android:orientation="horizontal"
                android:background="@color/white"
                android:layout_marginTop="10dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <ImageView
                    android:id="@+id/offer_img"
                    android:src="@drawable/d"
                    android:layout_width="100dp"
                    android:layout_height="100dp" />
                <TextView
                    android:id="@+id/short_des"
                    android:layout_marginTop="20dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
            </LinearLayout>
            <View
                android:layout_marginTop="10dp"
                android:background="@color/light_gray"
                android:layout_width="match_parent"
                android:layout_height="3dp">

            </View>
            <LinearLayout
                android:orientation="vertical"
                android:background="@color/light_gray"
                android:layout_width="match_parent"
                android:layout_height="200dp">
                <TextView
                    android:textSize="16sp"
                    android:textColor="#000"
                    android:layout_marginTop="10dp"
                    android:text=" Use this Code to Save more"
                    android:layout_gravity="center"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
                <RelativeLayout
                    android:layout_marginTop="30dp"
                    android:background="@drawable/dotted_back"
                    android:layout_gravity="center"
                    android:layout_width="wrap_content"
                    android:layout_height="60dp">

                    <TextView
                        android:id="@+id/cop_code"
                        android:text="dfsffdf"
                        android:textSize="25sp"
                        android:layout_centerHorizontal="true"
                        android:layout_centerVertical="true"
                        android:gravity="center"
                        android:layout_margin="5dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />
                </RelativeLayout>
                <TextView
                    android:id="@+id/expdate"
                    android:textSize="16sp"
                    android:layout_gravity="center"

                    android:layout_marginTop="30dp"

                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
            </LinearLayout>
            <TextView
                android:id="@+id/long_des"
                android:textColor="#000"
                android:textSize="16sp"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="10dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </LinearLayout>

    </ScrollView>
</LinearLayout>
