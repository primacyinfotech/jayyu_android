<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="fill_parent"
    android:background="@drawable/back_border"
    android:layout_height="match_parent">
    <LinearLayout
        android:layout_gravity="center"
        android:orientation="vertical"
        android:layout_width="350dp"
        android:layout_height="match_parent">
   <ImageView
       android:id="@+id/image_view"
       android:layout_width="200dp"
       android:background="@drawable/border_coupon_text"
       android:layout_gravity="center"
       android:scaleType="fitXY"
       android:layout_marginTop="30dp"
       android:layout_height="200dp" />
    <LinearLayout
        android:layout_marginTop="20dp"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <ImageButton
            android:id="@+id/cam_btn"

            android:textSize="20sp"
            android:textColor="@color/white"
            android:text="Upload"
           android:layout_gravity="center"
            android:textAllCaps="false"
            android:src="@drawable/camera"
            android:fontFamily="@font/clearsansbold"
            android:background="@drawable/corner_round_button"
            android:layout_marginLeft="130dp"
            android:layout_width="70dp"
            android:layout_height="70dp" />

    </LinearLayout>
    <EditText
        android:id="@+id/report_name"
        android:layout_marginTop="20dp"
        android:fontFamily="@font/clearsansbold"
        android:hint="Enter Report Name"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:background="@drawable/border_coupon_text"
        android:layout_width="match_parent"
        android:layout_height="50dp" />
    <EditText
        android:id="@+id/report_up_date"
        android:layout_marginTop="20dp"
        android:fontFamily="@font/clearsansbold"
        android:hint="Enter Report Upload Date"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:background="@drawable/border_coupon_text"
        android:layout_width="match_parent"
        android:layout_height="50dp" />
    <Button
        android:id="@+id/upload"
        android:layout_marginTop="20dp"
        android:textSize="20sp"
        android:textColor="@color/white"
        android:text="Upload"
        android:layout_margin="20dp"
        android:textAllCaps="false"
        android:fontFamily="@font/clearsansbold"
        android:background="@drawable/coupon_button_back"
        android:layout_gravity="center"
        android:layout_width="match_parent"
        android:layout_height="50dp" />
    </LinearLayout>
</LinearLayout>