<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:background="@drawable/back_border"

    android:layout_margin="5dp"
    android:layout_height="200dp">
<LinearLayout
    android:orientation="horizontal"
   android:layout_marginTop="10dp"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <TextView
        android:textColor="#000"
        android:textSize="18sp"
        android:text="MRP"
        android:fontFamily="@font/clearsansbold"
        android:layout_marginLeft="20dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    <TextView
        android:textColor="#000"
        android:textSize="18sp"
        android:text="\u20B9"
        android:layout_marginLeft="20dp"
        android:fontFamily="@font/clearsansbold"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <TextView
        android:id="@+id/mrp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="5dp"
        android:text="14.00"
        android:fontFamily="@font/clearsansbold"
        android:textColor="#000"
        android:textSize="18sp" />
</LinearLayout>
    <LinearLayout
        android:orientation="horizontal"
        android:background="@drawable/back_border"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/save_percernt"
            android:textColor="@color/colorAccent"
            android:textSize="18sp"
            android:text="Save 25%"
            android:layout_marginLeft="20dp"

            android:background="@color/light_gray"
            android:fontFamily="@font/clearsansbold"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <TextView
            android:textColor="#000"
            android:textSize="18sp"
            android:text="\u20B9"
            android:layout_marginLeft="20dp"
            android:fontFamily="@font/clearsansbold"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <TextView
            android:id="@+id/save_amt"
            android:textColor="#000"
            android:textSize="15sp"
            android:text="12.25"
            android:fontFamily="@font/clearsansbold"
            android:layout_marginLeft="5dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

    </LinearLayout>
    <TextView
        android:id="@+id/qty_per"
        android:textColor="#000"
        android:fontFamily="@font/clearsansbold"
        android:textSize="15sp"
        android:text="15 tablets in 1 strip"
        android:layout_marginLeft="20dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    <LinearLayout
        android:layout_marginTop="15dp"
        android:orientation="horizontal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
    <RelativeLayout
        android:layout_width="220dp"
        android:layout_height="30dp"
        android:layout_marginRight="26dp"
        android:layout_marginLeft="20dp"
        android:layout_weight="1"
        android:layout_gravity="center"
        android:background="@drawable/spinner_back"
        android:orientation="horizontal">

        <Spinner
            android:id="@+id/country_select"
            android:layout_width="200dp"
            android:layout_height="30dp"
            android:layout_weight="1"
            android:layout_marginTop="5dp"
            android:background="@android:color/transparent"
            android:layout_marginRight="26dp"
            android:textSize="15sp"
            android:spinnerMode="dropdown"/>

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="20dp"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginLeft="100dp"
            android:paddingBottom="5dp"
            android:src="@drawable/ic_action_down_arrow" />

    </RelativeLayout>
       <Button
           android:id="@+id/add_cart"
           android:text="Add To Cart"
           android:layout_gravity="center"
           android:layout_marginLeft="10dp"
           android:layout_marginRight="10dp"
           android:textAllCaps="false"
           android:textColor="#fff"
           android:textSize="14sp"
           android:fontFamily="@font/clearsansbold"
           android:background="@drawable/corner_round_button"
           android:layout_width="100dp"
           android:layout_height="35dp" />
    </LinearLayout>
<TextView
    android:id="@+id/refund_nonrefund"
    android:layout_width="wrap_content"
    android:text="Not returnable"
    android:layout_marginLeft="20dp"
    android:textSize="15sp"
    android:layout_marginTop="20dp"
    android:fontFamily="@font/clearsansbold"
    android:layout_height="wrap_content" />
</LinearLayout>