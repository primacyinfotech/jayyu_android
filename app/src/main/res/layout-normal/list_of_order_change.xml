<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_margin="2dp"
    android:elevation="10dp"
    android:background="@color/white"
    android:layout_height="wrap_content">
    <RelativeLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
          <CheckBox
              android:id="@+id/item_select_check"
              android:layout_alignParentEnd="true"
              android:layout_marginRight="30dp"
              android:layout_marginTop="10dp"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content" />
    </RelativeLayout>
    <TextView
        android:id="@+id/item_name"
        android:textSize="15sp"
        android:textColor="#000"
        android:fontFamily="@font/clearsansbold"
        android:text="Calpol 500mg Tablet"

        android:layout_marginLeft="10dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <TextView
        android:id="@+id/unit"
        android:textSize="13sp"
        android:textColor="#000"
        android:fontFamily="@font/clear_sans_regular"
        android:text="1 strip 15 Tablets"

        android:layout_marginTop="5dp"
        android:layout_marginLeft="10dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp">
       <!-- <TextView
            android:id="@+id/qyt"
            android:textSize="13sp"
            android:textColor="#000"
            android:fontFamily="@font/clearsansbold"
            android:layout_marginTop="5dp"
            android:layout_marginLeft="10dp"
            android:layout_gravity="center"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

        </TextView>-->
   <!--     <TextView
            android:id="@+id/unit"
            android:textSize="13sp"
            android:textColor="#000"
            android:fontFamily="@font/clearsansbold"
            android:text="1 strip 15 Tablets"

            android:layout_marginTop="5dp"

            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />-->
        <TextView
            android:textSize="15sp"
            android:textColor="#000"
            android:fontFamily="@font/clearsansbold"
            android:text="M.R.P"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <TextView
            android:id="@+id/mrp"
            android:textSize="13sp"
            android:textColor="#000"
            android:fontFamily="@font/clear_sans_regular"
            android:text="M.R.P"
            android:layout_marginLeft="10dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <TextView
            android:id="@+id/amount"
            android:textSize="13sp"
            android:textColor="#000"
            android:fontFamily="@font/clearsansbold"
            android:text="14.02"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"/>
    </LinearLayout>

    <RelativeLayout
        android:layout_width="80dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="5dp"
        android:background="@drawable/spinner_back"
        android:orientation="horizontal">

        <TextView
            android:text="Qty"
            android:textSize="12dp"
            android:textColor="#000"
            android:gravity="center"
            android:layout_centerVertical="true"
            android:layout_toLeftOf="@+id/iv_drop"
            android:layout_marginRight="10dp"
            android:layout_width="wrap_content"
            android:layout_height="20dp" />
        <Spinner
            android:id="@+id/spn_qty"
            android:layout_width="80dp"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:background="@android:color/transparent"
            android:textSize="23dp" />

        <ImageView
            android:id="@+id/iv_drop"
            android:layout_width="15dp"
            android:layout_height="15dp"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="5dp"
            android:layout_marginTop="12dp"
            android:src="@drawable/itemarrow" />

    </RelativeLayout>


    <LinearLayout
        android:visibility="gone"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="10dp"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/delete_item_button"
            android:textSize="15sp"
            android:text="Remove"
            android:visibility="gone"
            android:fontFamily="@font/clearsansbold"
            android:layout_marginLeft="10dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <ImageView
            android:id="@+id/cart_minus_img_"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/minustwo" />
        <TextView
            android:id="@+id/cart_product_quantity_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical|center_horizontal"
            android:paddingLeft="15dip"
            android:paddingRight="15dip"
            android:fontFamily="@font/clearsansbold"
            android:text="1"
            android:textSize="12dip"
            android:textStyle="bold" />
        <ImageView
            android:id="@+id/cart_plus_img"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_action_round_plus" />

        <!-- <Spinner
             android:id="@+id/items_select_spn"
             android:layout_width="100dp"
             android:layout_height="30dp"
             android:layout_marginTop="5dp"
             android:layout_marginRight="26dp"
             android:textAlignment="center"
             android:background="@drawable/spinner_back"
             android:textSize="15sp" />-->

    </LinearLayout>
</LinearLayout>