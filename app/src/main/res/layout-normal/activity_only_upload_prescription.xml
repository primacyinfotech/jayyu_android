<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".OnlyUploadPrescription">
    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="?attr/colorPrimary"
        app:popupTheme="@style/AppTheme.PopupOverlay" >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <ImageView
                android:id="@+id/back_button"
                android:layout_gravity="center"
                android:src="@drawable/ic_action_back_arrow"
                android:layout_width="50dp"

                android:layout_height="wrap_content" />
            <TextView
                android:textColor="#fff"
                android:layout_gravity="center"
                android:text="Upload Prescription"
                android:fontFamily="@font/clearsansbold"
                android:textSize="18sp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <View
                android:layout_width="180dp"
                android:layout_height="wrap_content">

            </View>
            <ImageView
                android:id="@+id/search_page"
                android:layout_gravity="center"
                android:src="@drawable/ic_action_search_view_png"
                android:layout_width="50dp"
                android:layout_height="wrap_content" />
            <ImageView
                android:id="@+id/cart_view"
                android:layout_gravity="center"
                android:layout_marginLeft="10dp"
                android:src="@drawable/ic_action_cart"
                android:layout_width="50dp"
                android:visibility="gone"
                android:layout_height="wrap_content" />

        </LinearLayout>
    </androidx.appcompat.widget.Toolbar>
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@+id/btn_continue"
        android:layout_below="@+id/toolbar">
        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <androidx.cardview.widget.CardView
                android:id="@+id/card_view"
                android:layout_margin="10dp"
                android:background="@color/white"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">
                    <TextView
                        android:layout_gravity="left"
                        android:layout_marginLeft="20dp"
                        android:layout_marginTop="20dp"
                        android:textSize="15sp"
                        android:textColor="#000"
                        android:fontFamily="@font/clearsansbold"
                        android:text="Upload  Prescription"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />
                <LinearLayout
                    android:layout_marginTop="10dp"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:background="@drawable/corner_round_button"
                    android:layout_width="match_parent"
                    android:layout_height="60dp">
                    <LinearLayout
                        android:id="@+id/camera_choose"
                        android:layout_gravity="center"
                        android:layout_margin="5dp"
                        android:orientation="vertical"
                        android:layout_width="100dp"
                        android:layout_height="50dp">
                        <ImageView
                            android:layout_marginTop="5dp"
                            android:src="@drawable/camera"
                            android:layout_gravity="center"
                            android:layout_width="24dp"
                            android:layout_height="24dp" />
                        <TextView
                            android:textSize="10sp"
                            android:text="Camera"
                            android:fontFamily="@font/clearsansbold"
                            android:layout_gravity="center"
                            android:textColor="@color/white"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content" />
                    </LinearLayout>
                    <View
                        android:layout_gravity="center"
                        android:layout_width="2dp"
                        android:background="@color/white"
                        android:layout_height="40dp">

                    </View>
                    <LinearLayout
                        android:id="@+id/gallery_choose"
                        android:layout_gravity="center"
                        android:orientation="vertical"
                        android:layout_width="100dp"
                        android:layout_height="50dp">
                        <ImageView
                            android:layout_marginTop="5dp"
                            android:src="@drawable/gallery"
                            android:layout_gravity="center"
                            android:layout_width="24dp"
                            android:layout_height="24dp" />
                        <TextView
                            android:textSize="10sp"
                            android:text="Gallery"
                            android:fontFamily="@font/clearsansbold"
                            android:layout_gravity="center"
                            android:textColor="@color/white"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content" />
                    </LinearLayout>
                    <View
                        android:layout_gravity="center"
                        android:layout_width="2dp"
                        android:background="@color/white"
                        android:layout_height="40dp">

                    </View>
                    <LinearLayout
                        android:id="@+id/past_prescription_choose"
                        android:layout_gravity="center"
                        android:orientation="vertical"
                        android:layout_marginLeft="4dp"
                        android:layout_width="100dp"
                        android:layout_height="50dp">
                        <ImageView
                            android:layout_marginTop="5dp"
                            android:src="@drawable/pastprescription"
                            android:layout_gravity="center"
                            android:layout_width="24dp"
                            android:layout_height="24dp" />
                        <TextView
                            android:textSize="10sp"
                            android:text="Past Prescription"
                            android:fontFamily="@font/clearsansbold"
                            android:layout_gravity="center"
                            android:textColor="@color/white"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content" />
                    </LinearLayout>

                </LinearLayout>
                    <LinearLayout
                        android:layout_marginTop="20dp"
                        android:layout_marginLeft="8dp"
                        android:layout_marginRight="8dp"
                        android:id="@+id/attach_rule"
                        android:orientation="horizontal"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">
                        <ImageView
                            android:src="@drawable/p1"
                            android:layout_width="40dp"
                            android:layout_height="40dp" />
                        <TextView
                            android:text="Your attached prescription will be secure and private. Only our pharmacist will review it."
                            android:textSize="13sp"
                            android:textColor="#000"
                            android:layout_marginLeft="10dp"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content" />
                    </LinearLayout>
                    <LinearLayout
                        android:layout_marginTop="10dp"
                        android:layout_marginBottom="10dp"
                        android:layout_marginLeft="8dp"
                        android:layout_marginRight="8dp"
                        android:orientation="horizontal"
                        android:layout_gravity="center"
                        android:gravity="center"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">
                        <ImageView
                            android:src="@drawable/p2"
                            android:layout_width="40dp"
                            android:layout_height="40dp" />
                        <TextView
                            android:text="Government regulations require a prescription for ordering
some  medicines."           android:layout_marginLeft="10dp"
                            android:textColor="#000"
                            android:textSize="13sp"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content" />
                    </LinearLayout>
                </LinearLayout>
            </androidx.cardview.widget.CardView>
            <androidx.cardview.widget.CardView
                android:id="@+id/card_view_prescrip_list"
                android:layout_margin="10dp"
                android:background="@color/white"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <ScrollView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <LinearLayout
                        android:orientation="vertical"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">
                        <LinearLayout
                            android:orientation="vertical"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">
                            <TextView
                                android:layout_marginTop="15dp"
                                android:layout_marginLeft="10dp"
                                android:textSize="15sp"
                                android:fontFamily="@font/clearsansbold"
                                android:text="New Prescription List"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content" />
                            <View
                                android:layout_width="match_parent"
                                android:layout_height="2dp"
                                android:background="@color/grey"/>
                            <ImageView
                                android:visibility="gone"
                                android:id="@+id/new_prescription_btn"
                                android:layout_marginTop="15dp"
                                android:src="@drawable/arrow_down"
                                android:layout_marginLeft="120dp"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content" />
                        </LinearLayout>


                        <androidx.recyclerview.widget.RecyclerView
                            android:id="@+id/prescription_list_new"
                            android:layout_width="match_parent"
                            android:orientation="horizontal"
                            app:reverseLayout="true"

                            android:layout_height="150dp">

                        </androidx.recyclerview.widget.RecyclerView>



                        <LinearLayout
                            android:orientation="vertical"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">
                            <TextView
                                android:layout_marginTop="15dp"
                                android:layout_marginLeft="10dp"
                                android:textSize="15sp"
                                android:fontFamily="@font/clearsansbold"
                                android:text="Old Prescription List"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content" />
                            <View
                                android:layout_width="match_parent"
                                android:layout_height="2dp"
                                android:background="@color/grey"/>
                            <ImageView
                                android:visibility="gone"
                                android:id="@+id/old_prescription_btn"
                                android:layout_marginTop="15dp"
                                android:src="@drawable/arrow_down"
                                android:layout_marginLeft="120dp"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content" />
                        </LinearLayout>


                        <androidx.recyclerview.widget.RecyclerView
                            android:id="@+id/prescription_list_old"
                            android:layout_width="match_parent"
                            android:orientation="horizontal"
                            app:reverseLayout="true"
                            android:layout_height="150dp">

                        </androidx.recyclerview.widget.RecyclerView>

                    </LinearLayout>
                </ScrollView>

            </androidx.cardview.widget.CardView>
            <TextView
                android:text="Valid Prescription Guide"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="20dp"
                android:textSize="18dp"
                android:fontFamily="@font/clearsansbold"
                android:textColor="@color/colorAccent"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <ImageView
                android:layout_marginTop="20dp"
                android:src="@drawable/p3"
                android:scaleType="fitXY"
                android:layout_gravity="center"
                android:layout_width="350dp"
                android:layout_height="300dp" />
        </LinearLayout>
    </ScrollView>
    <Button
        android:id="@+id/btn_continue"
        android:textColor="@color/white"
        android:textAllCaps="false"
        android:textSize="18dp"
        android:background="@drawable/corner_round_button"
        android:text="Continue"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginTop="5dp"
        android:layout_marginBottom="15dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"/>
</RelativeLayout>