<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:background="@color/ligth_green"
    android:layout_margin="2dp"
    android:layout_height="wrap_content">

        <LinearLayout
            android:orientation="horizontal"
            android:layout_marginLeft="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:weightSum="2">
            <TextView
                android:id="@+id/date_of_delivery"
                android:text="Estimated delivery"
                android:textColor="@color/green"
                android:textSize="13sp"
                android:fontFamily="@font/clearsansbold"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"/>
            <TextView
                android:id="@+id/date_of_delivery_status"
                android:text="12 November,2019"
                android:textColor="@color/green"
                android:textSize="13sp"

                android:fontFamily="@font/clearsansbold"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"/>
        </LinearLayout>
    </LinearLayout>
