<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".PatientAddPage">
    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="?attr/colorPrimary"
        app:popupTheme="@style/AppTheme.PopupOverlay" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <ImageView
                android:id="@+id/back_button"
                android:layout_gravity="center"
                android:src="@drawable/ic_action_back_arrow"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <TextView
                android:layout_gravity="center"
                android:textColor="#fff"
                android:layout_marginLeft="15dp"
                android:text="Add Patient"
                android:textSize="22sp"
                android:fontFamily="@font/clearsansbold"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

        </LinearLayout>
    </androidx.appcompat.widget.Toolbar>
    <androidx.cardview.widget.CardView
        app:cardCornerRadius="10dp"
        android:layout_marginTop="5dp"
        android:layout_marginRight="5dp"
        android:layout_marginLeft="5dp"
        android:elevation="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/toolbar"
        android:layout_above="@+id/add_btn">
        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:scrollbarThumbVertical="@null">
        <LinearLayout
            android:layout_margin="10dp"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
            android:textColor="@color/colorAccent"
            android:text="Patient Name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

        </TextView>
            <EditText
                android:id="@+id/patient_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

            </EditText>
            <TextView
                android:textColor="@color/colorAccent"
                android:text="Relation with Patient"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

            </TextView>
            <EditText
                android:id="@+id/patient_relation"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

            </EditText>
            <TextView
                android:textColor="@color/colorAccent"
                android:text="Date Of Birth"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

            </TextView>
            <EditText
                android:id="@+id/dob"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

            </EditText>
            <TextView
                android:textColor="@color/colorAccent"
                android:text="Gender"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

            </TextView>
            <EditText
                android:id="@+id/patient_gender"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

            </EditText>
            <TextView
                android:textColor="@color/colorAccent"
                android:text="Blood Group"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

            </TextView>
            <EditText
                android:id="@+id/patient_blood"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

            </EditText>
  <LinearLayout
      android:orientation="horizontal"
      android:layout_width="match_parent"
      android:layout_height="wrap_content">
      <LinearLayout
          android:orientation="vertical"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content">
          <TextView
              android:text="Height"
              android:textColor="@color/colorAccent"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content">

          </TextView>
          <LinearLayout
              android:orientation="horizontal"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content">
          <!--<EditText
              android:id="@+id/height"
              android:layout_width="195dp"
              android:layout_height="wrap_content">

          </EditText>-->
              <RelativeLayout
                  android:orientation="vertical"
                  android:layout_width="98dp"
                  android:layout_height="wrap_content">
                  <EditText
                      android:id="@+id/ft"
                      android:layout_width="98dp"
                      android:inputType="number"
                      android:maxLength="1"
                      android:layout_height="wrap_content"
                      android:layout_gravity="center"
                      />
                  <TextView
                      android:id="@+id/text_hint_ft"
                      android:layout_width="wrap_content"
                      android:layout_height="wrap_content"
                      android:layout_alignParentRight="true"
                      android:layout_centerVertical="true"
                      android:text="ft"

                      android:textSize="18sp"
                      android:layout_marginRight="25dp"
                      android:textColor="#808080"
                      />
              </RelativeLayout>
              <RelativeLayout
                  android:orientation="vertical"
                  android:layout_width="98dp"
                  android:layout_height="wrap_content">
                  <EditText
                      android:id="@+id/inch"
                      android:layout_width="98dp"
                      android:maxLength="2"
                      android:inputType="number"
                      android:layout_height="wrap_content"
                      android:layout_gravity="center"
                      />
                  <TextView
                      android:id="@+id/text_hint_inch"
                      android:layout_width="wrap_content"
                      android:layout_height="wrap_content"
                      android:layout_alignParentRight="true"
                      android:layout_centerVertical="true"
                      android:text="inch"

                      android:textSize="18sp"
                      android:layout_marginRight="25dp"
                      android:textColor="#808080"
                      />
              </RelativeLayout>
          </LinearLayout>
      </LinearLayout>
      <LinearLayout
          android:orientation="vertical"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content">
          <TextView
              android:text="Weight"
              android:textColor="@color/colorAccent"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content">

          </TextView>
         <!-- <EditText
              android:id="@+id/weight"
              android:layout_width="195dp"
              android:layout_height="wrap_content">

          </EditText>-->
          <RelativeLayout
              android:orientation="vertical"
              android:layout_width="195dp"
              android:layout_height="wrap_content">
              <EditText
                  android:id="@+id/weight"
                  android:layout_width="195dp"
                  android:inputType="number"
                  android:maxLength="3"
                  android:layout_height="wrap_content"
                  android:layout_gravity="center"
                  />
              <TextView
                  android:id="@+id/text_hint_weight"
                  android:layout_width="wrap_content"
                  android:layout_height="wrap_content"
                  android:layout_alignParentRight="true"
                  android:layout_centerVertical="true"
                  android:text="kg"

                  android:textSize="18sp"
                  android:layout_marginRight="100dp"
                  android:textColor="#808080"
                  />
          </RelativeLayout>

      </LinearLayout>
  </LinearLayout>
            <TextView
                android:textColor="@color/colorAccent"
                android:text="Medical Condition"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

            </TextView>
            <EditText
                android:id="@+id/medical_condition"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

            </EditText>
            <TextView
                android:textColor="@color/colorAccent"
                android:text="Allergies and Reaction"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

            </TextView>
            <EditText
                android:id="@+id/reaction"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

            </EditText>
            <TextView
                android:textColor="@color/colorAccent"
                android:text="Medication"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

            </TextView>
            <EditText
                android:id="@+id/medication"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

            </EditText>
            <Button
                android:id="@+id/view_prescrip"
                android:layout_margin="10dp"
                android:text="Medical Prescription and Report"
                android:textAllCaps="false"
                android:visibility="gone"
                android:textColor="@color/white"
                 android:background="@color/colorAccent"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

            </Button>
            <LinearLayout
                android:background="@color/light_gray"
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp">
                <LinearLayout
                    android:layout_margin="10dp"
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:gravity="center_vertical"
                    android:weightSum="2">
                    <TextView
                        android:textColor="#000"
                        android:text="Emergency Contact"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1">
                    </TextView>
                    <TextView
                        android:id="@+id/add_con_one"
                        android:text="Add from Contact"
                        android:textColor="@color/colorAccent"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1">

                    </TextView>

                </LinearLayout>
                <LinearLayout
                    android:visibility="gone"
                    android:layout_marginTop="20dp"
                    android:layout_marginLeft="10dp"
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <TextView
                        android:textColor="#000"
                        android:text="Emergency Contact 2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content">
                    </TextView>
                    <TextView
                        android:id="@+id/add_con_two"
                        android:text="Add from Contact"
                        android:textColor="@color/colorAccent"
                        android:layout_marginLeft="50dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content">

                    </TextView>

                </LinearLayout>
            </LinearLayout>
        </LinearLayout>
    </ScrollView>
    </androidx.cardview.widget.CardView>
    <Button
        android:id="@+id/add_btn"
        android:textSize="20dp"
        android:textColor="@color/white"
        android:text="Add Patient"
        android:layout_gravity="center"
        android:fontFamily="@font/clearsansbold"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_alignParentBottom="true"
        android:layout_marginTop="5dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginBottom="15dp"
        android:background="@drawable/coupon_button_back" />
</RelativeLayout>