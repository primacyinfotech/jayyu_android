<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#EFEFEF"
    tools:context=".OrderDetails">
    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="?attr/colorPrimary"
        app:popupTheme="@style/AppTheme.PopupOverlay" >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <ImageView
                android:id="@+id/back_button"
                android:layout_gravity="center"
                android:src="@drawable/ic_action_back_arrow"
                android:layout_width="50dp"
                android:layout_height="wrap_content" />
            <TextView
                android:textColor="#fff"
                android:layout_gravity="center"
                android:text="Order Details"
                android:fontFamily="@font/clearsansbold"
                android:textSize="20sp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

        </LinearLayout>
    </androidx.appcompat.widget.Toolbar>
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="510dp"
        android:scrollbars="vertical">
        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
        <LinearLayout
            android:orientation="vertical"
            android:background="#fff"
            android:padding="5dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <LinearLayout
                android:orientation="vertical"
                android:layout_margin="10dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
<LinearLayout
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <ImageView
        android:id="@+id/order_details_icon"
        android:layout_width="16dp"
        android:visibility="gone"
        android:layout_height="16dp"
        android:layout_gravity="center"
       />
    <RelativeLayout
        android:layout_gravity="center"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <TextView

            android:id="@+id/active_order"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginLeft="5dp"
            android:fontFamily="@font/clearsansbold"
            android:text="Pending"
            android:textColor="#000"
            android:textSize="15dp" />
        <TextView

            android:id="@+id/active_order_two"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginLeft="5dp"
            android:fontFamily="@font/clearsansbold"
            android:text="Confirmed"
            android:textColor="@color/design_default_color_primary_dark"
            android:textSize="15dp" />
        <TextView

            android:id="@+id/active_order_three"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginLeft="5dp"
            android:fontFamily="@font/clearsansbold"
            android:text="Billing"
            android:textColor="#000"
            android:textSize="15dp" />
        <TextView

            android:id="@+id/active_order_four"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginLeft="5dp"
            android:fontFamily="@font/clearsansbold"
            android:text="Out for Delivery"
            android:textColor="#000"
            android:textSize="15dp" />
        <TextView

            android:id="@+id/active_order_five"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginLeft="5dp"
            android:fontFamily="@font/clearsansbold"
            android:text="Delivered"
            android:textColor="#009900"
            android:textSize="15dp" />
        <TextView

            android:id="@+id/active_order_six"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginLeft="5dp"
            android:fontFamily="@font/clearsansbold"
            android:text="Cancelled"
            android:textColor="#ff0000"
            android:textSize="15dp" />
        <TextView

            android:id="@+id/active_order_seven"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginLeft="5dp"
            android:fontFamily="@font/clearsansbold"
            android:text="Rejected"
            android:textColor="#ff0000"
            android:textSize="15dp" />
    </RelativeLayout>
</LinearLayout>
                <TextView
                    android:id="@+id/processing_status"
                    android:textColor="#000"
                    android:fontFamily="@font/clearsansbold"
                    android:text="Under Processing.Your Order is being Processed
 by our pharmact partner"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
            </LinearLayout>

        </LinearLayout>
            <LinearLayout
                android:orientation="vertical"
                android:background="#fff"
                android:padding="5dp"
                android:visibility="gone"
                android:elevation="10dp"
                android:layout_marginTop="20dp"
                android:layout_marginRight="10dp"
                android:layout_marginLeft="10dp"
                android:layout_marginBottom="20dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:textColor="@color/colorAccent"
                    android:fontFamily="@font/clearsansbold"
                    android:text="Upload Prescription"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                </TextView>
                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/show_prescription_list"
                    android:layout_width="match_parent"
                    android:layout_height="150dp">

                </androidx.recyclerview.widget.RecyclerView>
            </LinearLayout>
<LinearLayout
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:background="@color/ligth_green"
    android:layout_height="50dp">
    <LinearLayout
        android:orientation="horizontal"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="10dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
   <TextView
       android:text="Estimated delivery"
       android:textColor="@color/green"
       android:fontFamily="@font/clearsansbold"
       android:layout_width="wrap_content"
       android:layout_height="wrap_content" />
        <TextView
            android:id="@+id/date_of_delivery"
            android:text="12 November,2019"
            android:textColor="@color/green"
            android:layout_marginLeft="95dp"
            android:fontFamily="@font/clearsansbold"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        </LinearLayout>
</LinearLayout>
     <androidx.cardview.widget.CardView
         android:id="@+id/card_view"
         android:layout_margin="10dp"
         android:background="@color/white"
         android:layout_width="match_parent"
         android:layout_height="match_parent">
         <LinearLayout

             android:orientation="vertical"
             android:layout_width="match_parent"
             android:layout_height="wrap_content">
<LinearLayout
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="50dp">

         <TextView
             android:text="Items"
             android:fontFamily="@font/clearsansbold"
             android:textColor="#000"
             android:textSize="15sp"
             android:layout_marginTop="10dp"
             android:layout_marginLeft="10dp"
             android:layout_width="wrap_content"
             android:layout_height="wrap_content" />
    <ImageView
        android:id="@+id/expend_btn"
        android:src="@drawable/ic_action_down_arrow"
        android:layout_gravity="center"
        android:layout_marginLeft="250dp"
      android:visibility="gone"
        android:layout_width="20dp"
        android:layout_height="20dp" />
</LinearLayout>
             <androidx.recyclerview.widget.RecyclerView
                 android:id="@+id/rv_items"
                 android:layout_marginTop="10dp"
                 android:layout_width="match_parent"
                 android:layout_height="wrap_content">

             </androidx.recyclerview.widget.RecyclerView>
         </LinearLayout>
     </androidx.cardview.widget.CardView>
            <androidx.cardview.widget.CardView
                android:id="@+id/card_view_other_details"
                android:layout_margin="10dp"
                android:background="@color/white"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <LinearLayout
                    android:layout_width="match_parent"

                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="10dp"
                        android:layout_marginTop="20dp"
                        android:fontFamily="@font/clearsansbold"
                        android:text="Order details"
                        android:textColor="#000"
                        android:textSize="20sp" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <TextView

                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="20dp"
                            android:layout_marginTop="10dp"
                            android:drawableLeft="@drawable/orederid"
                            android:fontFamily="@font/clearsansbold"
                            android:text="Order ID"
                            android:textSize="15sp" />

                        <View
                            android:layout_width="100dp"
                            android:layout_height="0dp"
                            android:layout_gravity="center"></View>

                        <TextView
                            android:id="@+id/ordr_id"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:fontFamily="@font/clearsansbold"
                            android:text="" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="20dp"
                            android:layout_marginTop="10dp"
                            android:drawableLeft="@drawable/calender"
                            android:fontFamily="@font/clearsansbold"
                            android:text="Order Date"
                            android:textSize="15sp" />

                        <View
                            android:layout_width="90dp"
                            android:layout_height="0dp"
                            android:layout_gravity="center"></View>

                        <TextView
                            android:id="@+id/ordr_date"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:fontFamily="@font/clearsansbold"
                            android:text="" />
                    </LinearLayout>

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="2dp"
                        android:layout_marginTop="10dp"
                        android:background="@color/light_gray">

                    </View>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:background="#fff"
                        android:orientation="vertical">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_margin="10dp"
                            android:orientation="horizontal">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:fontFamily="@font/clearsansbold"
                                android:text="M.R.P.Total"
                                android:textColor="#000"
                                android:textSize="15sp" />

                            <View
                                android:layout_width="170dp"
                                android:layout_height="0dp">

                            </View>

                            <TextView
                                android:id="@+id/mrp_amount"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:fontFamily="@font/clearsansbold"
                                android:text=""
                                android:textSize="15sp" />
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_margin="10dp"
                            android:orientation="horizontal">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:fontFamily="@font/clearsansbold"
                                android:text="Saving    "
                                android:textColor="#000"
                                android:textSize="15sp" />

                            <View
                                android:layout_width="165dp"
                                android:layout_height="0dp">

                            </View>

                            <TextView
                                android:id="@+id/save_amount"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:fontFamily="@font/clearsansbold"
                                android:text=""
                                android:textSize="15sp" />
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_margin="10dp"
                            android:orientation="horizontal">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:fontFamily="@font/clearsansbold"
                                android:text="Delivery Charges"
                                android:textColor="#000"
                                android:textSize="15sp" />

                            <View

                                android:layout_width="120dp"
                                android:layout_height="0dp">

                            </View>

                            <TextView
                                android:id="@+id/ship_charge"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:fontFamily="@font/clearsansbold"
                                android:text=""
                                android:textSize="15sp" />
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_margin="10dp"
                            android:orientation="horizontal">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:fontFamily="@font/clearsansbold"
                                android:text="Total Pay"
                                android:textColor="#000"
                                android:textSize="15sp" />

                            <View
                                android:layout_width="170dp"
                                android:layout_height="0dp">

                            </View>

                            <TextView
                                android:id="@+id/total_pay"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:fontFamily="@font/clearsansbold"
                                android:text=""
                                android:textSize="15sp" />
                        </LinearLayout>
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_margin="10dp"
                            android:id="@+id/wraper_wallet"
                            android:orientation="horizontal">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:fontFamily="@font/clearsansbold"
                                android:text="Wallet"
                                android:textColor="#000"
                                android:textSize="15sp" />

                            <View
                                android:layout_width="170dp"
                                android:layout_height="0dp">

                            </View>

                            <TextView
                                android:id="@+id/wallet_pay"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:fontFamily="@font/clearsansbold"
                                android:text=""
                                android:textSize="15sp" />
                        </LinearLayout>
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_margin="10dp"
                            android:id="@+id/wraper_jaayu_cash"
                            android:orientation="horizontal">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:fontFamily="@font/clearsansbold"
                                android:text="Jaayu Cash"
                                android:textColor="#000"
                                android:textSize="15sp" />

                            <View
                                android:layout_width="170dp"
                                android:layout_height="0dp">

                            </View>

                            <TextView
                                android:id="@+id/jaayu_pay"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:fontFamily="@font/clearsansbold"
                                android:text=""
                                android:textSize="15sp" />
                        </LinearLayout>
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_margin="10dp"
                            android:id="@+id/wraper_online_cash"
                            android:orientation="horizontal">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:fontFamily="@font/clearsansbold"
                                android:text="Online pay"
                                android:textColor="#000"
                                android:textSize="15sp" />

                            <View
                                android:layout_width="170dp"
                                android:layout_height="0dp">

                            </View>

                            <TextView
                                android:id="@+id/online_pay"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:fontFamily="@font/clearsansbold"
                                android:text=""
                                android:textSize="15sp" />
                        </LinearLayout>
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_margin="10dp"
                            android:id="@+id/wraper_cod_cash"
                            android:orientation="horizontal">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:fontFamily="@font/clearsansbold"
                                android:text="Cod"
                                android:textColor="#000"
                                android:textSize="15sp" />

                            <View
                                android:layout_width="200dp"
                                android:layout_height="0dp">

                            </View>

                            <TextView
                                android:id="@+id/cod_pay"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:fontFamily="@font/clearsansbold"
                                android:text=""
                                android:textSize="15sp" />
                        </LinearLayout>
                    </LinearLayout>

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="2dp"
                        android:layout_marginTop="10dp"
                        android:background="@color/light_gray">

                    </View>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="10dp"
                            android:layout_marginTop="20dp"
                            android:fontFamily="@font/clearsansbold"
                            android:text="Shipping Address"
                            android:textSize="20sp" />

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="vertical">

                            <TextView
                                android:id="@+id/ship_address"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="10dp"
                                android:fontFamily="@font/clearsansbold"
                                android:text="" />

                        </LinearLayout>

                    </LinearLayout>
                </LinearLayout>
            </androidx.cardview.widget.CardView>
        </LinearLayout>
    </ScrollView>
            <LinearLayout
                android:orientation="horizontal"
                android:layout_marginTop="20dp"
                android:background="@color/white"
                android:layout_width="match_parent"
                android:layout_height="60dp">
            <LinearLayout
                android:id="@+id/cancel_btn"
                android:orientation="vertical"
                android:layout_width="205dp"
                android:layout_height="match_parent">
                <TextView
                    android:id="@+id/text_cancel"
                    android:text=""
                    android:fontFamily="@font/clearsansbold"
                    android:gravity="center"
                    android:textColor="@color/colorAccent"
                    android:layout_gravity="center"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent" />
            </LinearLayout>
                <LinearLayout
                    android:id="@+id/paynow_btn"
                android:orientation="vertical"
                android:layout_width="200dp"
                android:background="@color/colorAccent"
                android:layout_height="match_parent">
                <TextView
                   android:id="@+id/text_pay"
                    android:text=""
                    android:textColor="#fff"
                    android:fontFamily="@font/clearsansbold"
                    android:gravity="center"
                    android:layout_gravity="center"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent" />
            </LinearLayout>


            </LinearLayout>


</LinearLayout>