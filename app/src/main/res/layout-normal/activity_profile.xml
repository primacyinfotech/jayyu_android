<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ProfileActivity">
    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="?attr/colorPrimary">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <ImageView
                android:id="@+id/back_button"
                android:layout_gravity="center"
                android:src="@drawable/ic_action_back_arrow"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
            <TextView
                android:layout_gravity="center"
                android:textColor="#fff"
                android:layout_marginLeft="15dp"
                android:text="Profile"
                android:textSize="22sp"
                android:fontFamily="@font/clearsansbold"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
        </LinearLayout>
    </androidx.appcompat.widget.Toolbar>
    <!--<androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/_5sdp"
        android:background="@drawable/border_gray_field"
        android:layout_below="@+id/toolbar"
        android:layout_above="@+id/fl_bottom">-->
        <ScrollView
            android:id="@+id/scrollView"
            android:layout_below="@+id/toolbar"
            android:layout_above="@+id/fl_bottom"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/border_gray_field"
            android:scrollbarThumbVertical="@null">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_margin="10dp"
                android:orientation="vertical"
                android:layout_height="wrap_content">
                <com.google.android.material.textfield.TextInputLayout
                    android:layout_width="match_parent"
                    android:hint="Name*"
                    app:hintTextColor="@color/black"
                    android:textColorHint="@color/black"
                    android:layout_height="wrap_content">
                    <com.google.android.material.textfield.TextInputEditText
                        android:layout_width="match_parent"
                        android:id="@+id/nameet"
                        android:imeOptions="actionNext"
                        android:maxLines="1"
                        android:inputType="text"
                        app:hintTextColor="@color/black"
                        android:nextFocusDown="@id/mobilenumet"
                        android:layout_height="wrap_content"/>

                </com.google.android.material.textfield.TextInputLayout>

                <com.google.android.material.textfield.TextInputLayout
                    android:layout_width="match_parent"
                    android:layout_marginTop="@dimen/activity_vertical_margin"
                    app:prefixText="Mobile Number*"
                    android:layout_height="wrap_content">
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:orientation="horizontal"
                        android:layout_height="wrap_content">
                        <TextView
                            android:layout_width="wrap_content"
                            android:text="+91 "
                            android:textColor="@color/black"
                            android:textSize="16sp"
                            android:layout_height="wrap_content"/>
                        <TextView
                            android:layout_width="match_parent"
                            android:id="@+id/mobilenumet"
                            android:nextFocusDown="@id/emailet"
                            android:maxLines="1"
                            android:textSize="16sp"
                            android:textColor="@color/black"
                            android:imeOptions="actionNext"
                            android:editable="false"
                            android:inputType="none"
                            android:layout_height="wrap_content"/>
                    </LinearLayout>
                    <ImageView
                        android:background="#646464"
                        android:layout_width="match_parent"
                        android:layout_height="1dip"/>
                </com.google.android.material.textfield.TextInputLayout>
                <com.google.android.material.textfield.TextInputLayout
                    android:layout_width="match_parent"
                    android:hint="Email ID*"
                    app:hintTextColor="@color/black"
                    android:textColorHint="@color/black"
                    android:layout_marginTop="@dimen/activity_vertical_margin"
                    android:layout_height="wrap_content">
                    <com.google.android.material.textfield.TextInputEditText
                        android:layout_width="match_parent"
                        android:id="@+id/emailet"
                        android:layout_height="wrap_content"/>
                </com.google.android.material.textfield.TextInputLayout>
                <com.google.android.material.textfield.TextInputLayout
                    android:layout_width="match_parent"
                    app:prefixText="Date Of Birth"
                    android:layout_marginTop="@dimen/activity_vertical_margin"
                    android:layout_height="wrap_content">
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">
                        <com.google.android.material.textfield.TextInputEditText
                            android:layout_width="match_parent"
                            android:id="@+id/dobet"
                            android:hint="DD/MM/YYYY"
                            android:focusable="false"
                            android:layout_height="wrap_content"/>
                    </LinearLayout>
                </com.google.android.material.textfield.TextInputLayout>
                <com.google.android.material.textfield.TextInputLayout
                    android:layout_width="match_parent"
                    android:hint="Gender"
                    android:layout_marginTop="@dimen/activity_vertical_margin"
                    app:prefixText="Gender"
                    android:layout_height="wrap_content">
                    <Spinner
                        android:entries="@array/Gender"
                        android:id="@+id/selectgenderspinner"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"/>
                </com.google.android.material.textfield.TextInputLayout>
                <ImageView
                    android:background="#646464"
                    android:layout_width="match_parent"
                    android:layout_height="1dip"/>
                <com.google.android.material.textfield.TextInputLayout
                    android:layout_width="match_parent"
                    app:prefixText="Blood Group"
                    android:layout_marginTop="@dimen/activity_vertical_margin"
                    android:layout_height="wrap_content">
                    <Spinner
                        android:nextFocusDown="@id/ftht"
                        android:id="@+id/bloodgroupspinner"
                        android:entries="@array/blood_group"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"/>
                    <ImageView
                        android:background="#646464"
                        android:layout_width="match_parent"
                        android:layout_height="1dip"/>

                </com.google.android.material.textfield.TextInputLayout>
                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:orientation="horizontal"
                    android:layout_marginTop="@dimen/activity_vertical_margin"
                    android:layout_height="wrap_content">
                    <LinearLayout
                        android:id="@+id/ll_height"
                        app:layout_constraintStart_toStartOf="parent"
                        android:layout_width="0dip"
                        app:layout_constraintWidth_percent="0.6"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintBottom_toBottomOf="parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">
                        <com.google.android.material.textfield.TextInputLayout
                            android:layout_width="match_parent"
                            app:prefixText="Height"
                            android:layout_height="wrap_content">
                            <LinearLayout
                                android:orientation="horizontal"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="10dp">
                               <!-- <EditText
                                    android:id="@+id/ftht"
                                    android:maxLength="2"
                                    android:layout_width="wrap_content"
                                    android:hint="ft"
                                    android:textSize="12sp"
                                    android:inputType="number"
                                    android:nextFocusRight="@id/ftin"
                                    android:background="@android:color/transparent"
                                    android:layout_height="wrap_content"/>
                                <TextView
                                    android:layout_width="wrap_content"
                                    android:text="  Ft  "
                                    android:textSize="14sp"
                                    android:gravity="bottom"
                                    android:layout_height="wrap_content"/>
                                <EditText
                                    android:id="@+id/ftin"
                                    android:maxLength="2"
                                    android:layout_width="wrap_content"
                                    android:hint=" inch "
                                    android:textSize="12sp"
                                    android:inputType="number"
                                    android:nextFocusRight="@id/weightet"
                                    android:background="@android:color/transparent"
                                    android:gravity="bottom"
                                    android:layout_height="wrap_content"/>

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:text="  Inch  "
                                    android:textSize="14sp"
                                    android:gravity="bottom"
                                    android:layout_height="wrap_content"/>-->
                                <EditText
                                    android:id="@+id/ftht"
                                    android:maxLength="1"
                                    android:layout_width="50dp"
                                    android:hint="ft"
                                    android:textSize="14sp"
                                    android:inputType="number"
                                    android:nextFocusRight="@id/ftin"
                                    android:background="@android:color/transparent"
                                    android:layout_height="match_parent"/>
                                <TextView
                                    android:layout_width="wrap_content"
                                    android:text="Ft"
                                    android:textSize="16sp"
                                    android:gravity="bottom"
                                    android:layout_height="wrap_content"/>
                                <EditText
                                    android:id="@+id/ftin"
                                    android:maxLength="2"
                                    android:layout_width="wrap_content"
                                    android:hint="inch"
                                    android:textSize="14sp"
                                    android:inputType="number"
                                    android:nextFocusRight="@id/weightet"
                                    android:background="@android:color/transparent"
                                    android:gravity="bottom"
                                    android:layout_height="wrap_content"
                                    android:paddingLeft="30dp"
                                    android:paddingRight="10dp"/>

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:text="Inch  "
                                    android:textSize="16sp"
                                    android:gravity="bottom"
                                    android:layout_height="wrap_content"/>
                            </LinearLayout>
                        </com.google.android.material.textfield.TextInputLayout>
                        <ImageView
                            android:background="#646464"
                            android:layout_width="match_parent"
                            android:layout_height="1dip"/>

                    </LinearLayout>

                    <com.google.android.material.textfield.TextInputLayout
                        android:layout_width="wrap_content"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintStart_toEndOf="@+id/ll_height"
                        app:hintTextColor="@color/black"
                        android:hint="Weight(Kg)"
                        android:textColorHint="@color/black"
                        android:layout_marginRight="@dimen/activity_vertical_margin"
                        app:layout_constraintTop_toTopOf="parent"
                        android:layout_height="wrap_content"
                        app:hintTextAppearance="@style/TextLabel">
                        <com.google.android.material.textfield.TextInputEditText
                            android:layout_width="wrap_content"
                            android:textSize="14sp"
                            android:maxLength="3"
                            android:inputType="number"
                            android:id="@+id/weightet"
                            android:layout_height="match_parent"/>
                    </com.google.android.material.textfield.TextInputLayout>
                </androidx.constraintlayout.widget.ConstraintLayout>

                <com.google.android.material.textfield.TextInputLayout
                    android:layout_width="match_parent"
                    app:prefixText="Marital Status"
                    android:layout_marginTop="@dimen/activity_vertical_margin"
                    android:layout_height="wrap_content">
                    <Spinner
                        android:entries="@array/marital_status"
                        android:id="@+id/maritalstatusspinner"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"/>
                </com.google.android.material.textfield.TextInputLayout>

                <ImageView
                    android:background="#646464"
                    android:layout_width="match_parent"
                    android:layout_height="1dip"/>

                <com.google.android.material.textfield.TextInputLayout
                    android:layout_width="match_parent"
                    app:prefixText="Emergency Contact Number"
                    android:layout_marginTop="@dimen/activity_vertical_margin"
                    android:layout_height="wrap_content">
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:orientation="horizontal"
                        android:layout_height="wrap_content">
                        <TextView
                            android:layout_width="wrap_content"
                            android:text="+91 "
                            android:textSize="17sp"
                            android:textColor="@color/black"
                            android:layout_height="wrap_content"/>

                        <com.google.android.material.textfield.TextInputEditText
                            android:id="@+id/emergencynum"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:maxLength="10"
                            android:hint="Emergency Contact Number"
                            android:inputType="number" />
                    </LinearLayout>
                </com.google.android.material.textfield.TextInputLayout>

                <com.google.android.material.textfield.TextInputLayout
                    android:layout_width="match_parent"
                    android:hint="Emergency Contact Name"
                    app:hintTextColor="@color/black"
                    android:textColorHint="@color/black"
                    app:hintTextAppearance="@style/TextInputLayoutHintText"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="5dp">
                    <com.google.android.material.textfield.TextInputEditText
                        android:layout_width="match_parent"
                        android:id="@+id/emergencyname"
                        android:textSize="16sp"
                        android:layout_height="wrap_content"/>
                </com.google.android.material.textfield.TextInputLayout>
            </LinearLayout>
        </ScrollView>
   <!-- </androidx.constraintlayout.widget.ConstraintLayout>-->

    <RelativeLayout
        android:id="@+id/fl_bottom"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:layout_marginRight="20dp"
        android:layout_marginLeft="20dp"
        android:layout_marginBottom="15dp"
        android:layout_alignParentBottom="true">

        <Button
            android:layout_width="match_parent"
            android:fontFamily="@font/rupee"
            android:textStyle="bold"
            android:text="UPDAte"
            android:id="@+id/updatebtn"
            android:textSize="16sp"
            android:background="@drawable/coupon_button_back"
            android:textColor="@color/white"
            android:layout_height="wrap_content"></Button>

        <ProgressBar
            android:elevation="4dip"
            android:layout_width="wrap_content"
            android:layout_gravity="center"
            android:visibility="invisible"
            android:id="@+id/pgsbar"
            android:indeterminateTint="@color/white"
            android:layout_height="wrap_content"/>

    </RelativeLayout>


    <FrameLayout
        android:id="@+id/progressframe"
        android:layout_width="match_parent"
        android:background="#99000000"
        android:elevation="2dip"
        android:visibility="gone"
        android:layout_height="match_parent">

        <ProgressBar
            android:layout_width="wrap_content"
            android:layout_gravity="center"
            android:layout_height="wrap_content"></ProgressBar>
    </FrameLayout>
</RelativeLayout>