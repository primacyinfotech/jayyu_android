                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Height"
                            android:textColor="@color/colorAccent">

                        </TextView>

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal">
                            <!--<EditText
                                android:id="@+id/height"
                                android:layout_width="195dp"
                                android:layout_height="wrap_content">

                            </EditText>-->
                            <RelativeLayout
                                android:layout_width="98dp"
                                android:layout_height="wrap_content"
                                android:orientation="vertical">

                                <EditText
                                    android:id="@+id/ft"
                                    android:layout_width="98dp"
                                    android:layout_height="wrap_content"
                                    android:layout_gravity="center"
                                    android:inputType="number"
                                    android:maxLength="1" />

                                <TextView
                                    android:id="@+id/text_hint_ft"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_alignParentRight="true"
                                    android:layout_centerVertical="true"
                                    android:layout_marginRight="25dp"

                                    android:text="ft"
                                    android:textColor="#808080"
                                    android:textSize="18sp" />
                            </RelativeLayout>

                            <RelativeLayout
                                android:layout_width="98dp"
                                android:layout_height="wrap_content"
                                android:orientation="vertical">

                                <EditText
                                    android:id="@+id/inch"
                                    android:layout_width="98dp"
                                    android:layout_height="wrap_content"
                                    android:layout_gravity="center"
                                    android:inputType="number"
                                    android:maxLength="2" />

                                <TextView
                                    android:id="@+id/text_hint_inch"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_alignParentRight="true"
                                    android:layout_centerVertical="true"
                                    android:layout_marginRight="25dp"

                                    android:text="inch"
                                    android:textColor="#808080"
                                    android:textSize="18sp" />
                            </RelativeLayout>
                        </LinearLayout>
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Weight"
                            android:textColor="@color/colorAccent">

                        </TextView>
                        <!-- <EditText
                             android:id="@+id/weight"
                             android:layout_width="195dp"
                             android:layout_height="wrap_content">

                         </EditText>-->
                        <RelativeLayout
                            android:layout_width="195dp"
                            android:layout_height="wrap_content"
                            android:orientation="vertical">

                            <EditText
                                android:id="@+id/weight"
                                android:layout_width="195dp"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center"
                                android:inputType="number"
                                android:maxLength="3" />

                            <TextView
                                android:id="@+id/text_hint_weight"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_alignParentRight="true"
                                android:layout_centerVertical="true"
                                android:layout_marginRight="100dp"

                                android:text="kg"
                                android:textColor="#808080"
                                android:textSize="18sp" />
                        </RelativeLayout>

                    </LinearLayout>
                </LinearLayout>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Medical Condition"
                    android:textColor="@color/colorAccent">

                </TextView>

                <EditText
                    android:id="@+id/medical_condition"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                </EditText>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Allergies and Reaction"
                    android:textColor="@color/colorAccent">

                </TextView>

                <EditText
                    android:id="@+id/reaction"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                </EditText>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Medication"
                    android:textColor="@color/colorAccent">

                </TextView>

                <EditText
                    android:id="@+id/medication"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                </EditText>

                <Button
                    android:id="@+id/view_prescrip"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="10dp"
                    android:background="@color/colorAccent"
                    android:text="Medical Prescription and Report"
                    android:textAllCaps="false"
                    android:textColor="@color/white"
                    android:visibility="gone">

                </Button>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="10dp"
                    android:background="@color/light_gray"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="10dp"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Emergency Contact 1"
                            android:textColor="#000"></TextView>

                        <TextView
                            android:id="@+id/add_con_one"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="50dp"
                            android:text="Add from Contact"
                            android:textColor="@color/colorAccent">

                        </TextView>

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="10dp"
                        android:layout_marginTop="20dp"
                        android:orientation="horizontal"
                        android:visibility="gone">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Emergency Contact 2"
                            android:textColor="#000"></TextView>

                        <TextView
                            android:id="@+id/add_con_two"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="50dp"
                            android:text="Add from Contact"
                            android:textColor="@color/colorAccent">

                        </TextView>

                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>
        </androidx.cardview.widget.CardView>
    </ScrollView>

    <Button
        android:id="@+id/update_btn"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_alignParentBottom="true"
        android:layout_gravity="center"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="5dp"
        android:layout_marginRight="20dp"
        android:layout_marginBottom="15dp"
        android:background="@drawable/coupon_button_back"
        android:fontFamily="@font/clearsansbold"
        android:text="Update Patient"
        android:textColor="@color/white"
        android:textSize="20dp" />
</RelativeLayout>