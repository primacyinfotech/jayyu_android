                android:text=""
                android:textColor="#fff"
                android:fontFamily="@font/clearsansbold"
                android:gravity="center"
                android:layout_gravity="center"
                android:layout_width="wrap_content"
                android:layout_height="match_parent" />
        </LinearLayout>


