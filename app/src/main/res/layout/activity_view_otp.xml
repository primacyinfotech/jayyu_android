<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".ViewOtp">
    <TextView
        android:text="Verification OTP"
        android:layout_gravity="center"
        android:textSize="25dp"
        android:layout_marginTop="100dp"
        android:textColor="@color/colorAccent"
        android:fontFamily="@string/normal_string"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    <in.aabhasjindal.otptextview.OtpTextView
        android:id="@+id/otp_view"
        android:layout_gravity="center"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/colorAccent"
        app:height="40dp"
        app:otp_box_background="@drawable/border_coupon_text"
        app:width="40dp"
        android:layout_marginTop="50dp"
        app:bar_enabled="true"
        app:bar_height="2dp"
        app:length="4"

        app:otp_text_size="24dp"/>
   <!-- <EditText
        android:id="@+id/view_otp"
        android:layout_width="200dp"
        android:layout_gravity="center"
        android:layout_height="wrap_content" />-->
    <Button
        android:id="@+id/goTo_submit"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:layout_marginRight="30dp"
        android:layout_marginLeft="30dp"
        android:background="@drawable/corner_round_button"
        android:fontFamily="@font/clearsansbold"
        android:text="Verify"
        android:textAllCaps="false"
        android:textColor="@color/white"
        android:textSize="20sp" />
    <TextView
        android:id="@+id/resend_btn"
        android:layout_marginTop="20dp"
        android:layout_gravity="center"
        android:gravity="center"
        android:fontFamily="@font/clearsansbold"
        android:textColor="@color/colorAccent"
        android:textSize="18sp"
        android:layout_margin="25dp"
        android:text="Resend"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
    <TextView
        android:layout_marginTop="20dp"
        android:layout_gravity="center"
        android:gravity="center"
        android:fontFamily="@font/clearsansbold"
        android:textColor="#000"
        android:textSize="15sp"
        android:layout_margin="25dp"
        android:text="@string/normal_string"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    <LinearLayout
        android:orientation="horizontal"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:background="@drawable/dotted_back"
        android:layout_width="match_parent"
        android:layout_height="50dp">
        <LinearLayout
            android:layout_marginTop="15dp"
            android:layout_marginLeft="18dp"
            android:orientation="horizontal"

            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <ImageView
                android:src="@drawable/pb"
                android:layout_width="25dp"
                android:layout_height="25dp" />
            <TextView
                android:id="@+id/save_percent"
                android:text="Save 25% Flat"
                android:gravity="center"
                android:textColor="#000"
                android:textSize="10dp"
                android:fontFamily="@font/clearsansbold"
                android:layout_gravity="center"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </LinearLayout>
        <LinearLayout
            android:layout_marginTop="10dp"
            android:layout_marginLeft="10dp"
            android:orientation="horizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <ImageView
                android:src="@drawable/retu"
                android:layout_width="25dp"
                android:layout_height="25dp" />
            <TextView

                android:text="Easy\n returns\n and refunds"
                android:gravity="center"
                android:textColor="#000"
                android:textSize="10dp"

                android:fontFamily="@font/clearsansbold"
                android:layout_gravity="center"

                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </LinearLayout>
        <LinearLayout
            android:layout_marginTop="15dp"
            android:layout_marginLeft="10dp"
            android:orientation="horizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <ImageView
                android:src="@drawable/dboy"
                android:layout_width="25dp"
                android:layout_height="25dp" />
            <TextView

                android:text="Ouick Delivery"
                android:gravity="center"
                android:textColor="#000"
                android:textSize="12dp"
                android:fontFamily="@font/clearsansbold"
                android:layout_gravity="center"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </LinearLayout>
    </LinearLayout>
</LinearLayout>