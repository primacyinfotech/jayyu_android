<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".LoginSignUp">
    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="?attr/colorPrimary"
        app:popupTheme="@style/AppTheme.PopupOverlay" >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
           <!-- <ImageView
                android:id="@+id/back_button"
                android:layout_gravity="center"
                android:src="@drawable/ic_action_back_arrow"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />-->
            <TextView
                android:layout_gravity="center"
                android:textColor="#fff"
                android:layout_marginLeft="15dp"
                android:text="Login/SignUp"
                android:textSize="22sp"
                android:fontFamily="@font/clearsansbold"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

        </LinearLayout>
    </androidx.appcompat.widget.Toolbar>
    <LinearLayout
        android:orientation="vertical"
        android:background="@color/white"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
         <TextView
             android:layout_marginTop="20dp"
             android:layout_gravity="center"
             android:fontFamily="@font/clearsansbold"
             android:textColor="#000"
             android:textSize="13sp"
             android:text="Login or Signup to access Your Order,\n special offers and more! "
             android:layout_width="wrap_content"
             android:layout_height="wrap_content" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
           android:layout_marginLeft="80dp"
            android:textSize="18sp"
            android:fontFamily="@font/clearsansbold"
            android:textColor="@color/colorAccent"
            android:text="Mobile Number"/>
        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

       <TextView
           android:text="+91"
           android:layout_gravity="center"
           android:layout_marginLeft="100dp"
           android:layout_marginTop="5dp"
           android:gravity="center"
           android:textSize="15sp"
           android:textColor="#000"
           android:fontFamily="@font/clearsansbold"
           android:layout_width="wrap_content"
           android:layout_height="wrap_content" />
        <EditText
            android:id="@+id/input_mobile"
            android:textSize="15sp"
            android:fontFamily="@font/clearsansbold"
            android:layout_marginTop="10dp"
            android:layout_marginRight="50dp"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:maxLength="10"
            android:inputType="phone" />
        </LinearLayout>
      <!--  <com.bachors.prefixinput.EditText
            android:id="@+id/input_mobile"
            android:text="+91"
            android:textSize="15sp"
            android:fontFamily="@font/clearsansbold"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="50dp"
            android:layout_marginRight="50dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="phone" />-->
        <TextView

            android:layout_gravity="center"
            android:fontFamily="@font/clearsansbold"
            android:textColor="#000"
            android:textSize="8sp"
            android:text="Don't use such a big line please keep it limited to the size required.Also\n
Bring the thing in center"
            android:visibility="gone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <Button
            android:id="@+id/goTo_submit"
            android:layout_marginTop="20dp"
            android:layout_marginLeft="50dp"
            android:layout_marginRight="50dp"
            android:textColor="@color/white"
            android:text="Continue"
            android:textSize="25sp"
            android:textAllCaps="false"
            android:fontFamily="@font/clearsansbold"
            android:background="@drawable/corner_round_button"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
    </LinearLayout>
    <LinearLayout
        android:orientation="vertical"
        android:background="@color/light_gray"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <TextView
            android:id="@+id/term_condition"
           android:layout_marginTop="10dp"
            android:layout_gravity="center"
            android:gravity="center"
            android:fontFamily="@font/clearsansbold"
            android:textSize="11sp"

            android:text="@string/normal_string"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <LinearLayout
            android:orientation="horizontal"
            android:layout_margin="15dp"
            android:background="@drawable/dotted_back"
            android:layout_width="match_parent"
            android:layout_height="50dp">
            <LinearLayout
                android:layout_marginTop="15dp"
                android:layout_marginLeft="25dp"
                android:orientation="horizontal"

                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
                <ImageView
                    android:src="@drawable/pb"
                    android:layout_width="25dp"
                    android:layout_height="25dp" />
                <TextView
                    android:id="@+id/save_percent"
                    android:text="25% Flat"
                    android:gravity="center"
                    android:textColor="#000"
                    android:textSize="10dp"
                    android:fontFamily="@font/clearsansbold"
                    android:layout_gravity="center"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
            </LinearLayout>
            <LinearLayout
                android:layout_marginTop="10dp"
                android:layout_marginLeft="15dp"
                android:orientation="horizontal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
                <ImageView
                    android:src="@drawable/retu"
                    android:layout_width="25dp"
                    android:layout_height="25dp" />
                <TextView

                    android:text="Easy\n returns"
                    android:gravity="center"
                    android:textColor="#000"
                    android:textSize="10dp"

                    android:fontFamily="@font/clearsansbold"
                    android:layout_gravity="center"

                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
            </LinearLayout>
            <LinearLayout
                android:layout_marginTop="15dp"
                android:layout_marginLeft="15dp"
                android:orientation="horizontal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
                <ImageView
                    android:src="@drawable/dboy"
                    android:layout_width="25dp"
                    android:layout_height="25dp" />
                <TextView

                    android:text="On time Delivery"
                    android:gravity="center"
                    android:textColor="#000"
                    android:textSize="12dp"
                    android:fontFamily="@font/clearsansbold"
                    android:layout_gravity="center"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
</LinearLayout>