<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".LoginSignUp">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="?attr/colorPrimary"
        app:popupTheme="@style/AppTheme.PopupOverlay">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <!-- <ImageView
                android:id="@+id/back_button"
                android:layout_gravity="center"
                android:src="@drawable/ic_action_back_arrow"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />-->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"

                android:layout_gravity="center"
                android:fontFamily="@font/clearsansbold"
                android:text="Login / Register"
                android:textColor="#fff"
                android:textSize="22sp" />

        </LinearLayout>
    </androidx.appcompat.widget.Toolbar>
    <LinearLayout
        android:orientation="horizontal"
        android:layout_marginTop="25dp"
        android:layout_gravity="center"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:background="@drawable/dotted_back"
        android:layout_width="match_parent"
        android:layout_height="60dp">
        <LinearLayout
            android:layout_marginTop="15dp"
            android:layout_marginLeft="25dp"
            android:orientation="horizontal"

            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <ImageView
                android:src="@drawable/pb"
                android:layout_width="25dp"
                android:layout_height="25dp" />
            <TextView
                android:id="@+id/save_percent"
                android:text="25% Flat"
                android:gravity="center"
                android:textColor="#000"
                android:textSize="10dp"
                android:fontFamily="@font/clearsansbold"
                android:layout_gravity="center"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </LinearLayout>
        <LinearLayout
            android:layout_marginTop="15dp"
            android:layout_marginLeft="35dp"
            android:orientation="horizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <ImageView
                android:src="@drawable/return2"
                android:layout_width="25dp"
                android:layout_height="25dp" />
            <TextView

                android:text="Easy returns"
                android:gravity="center"
                android:textColor="#000"
                android:textSize="10dp"

                android:fontFamily="@font/clearsansbold"
                android:layout_gravity="center"

                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </LinearLayout>
        <LinearLayout
            android:layout_marginTop="15dp"
            android:layout_marginLeft="35dp"
            android:orientation="horizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <ImageView
                android:src="@drawable/dboy"
                android:layout_width="25dp"
                android:layout_height="25dp" />
            <TextView

                android:text="On time Delivery"
                android:gravity="center"
                android:textColor="#000"
                android:textSize="10dp"
                android:fontFamily="@font/clearsansbold"
                android:layout_gravity="center"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </LinearLayout>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/white"
        android:orientation="vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="20dp"
            android:fontFamily="@font/clearsansbold"
            android:text="Login or Signup to access Your Order,\n special offers and more! "
            android:textColor="#000"
            android:textSize="13sp"
            android:visibility="gone" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="50dp"
            android:layout_marginTop="20dp"
            android:visibility="gone"
            android:fontFamily="@font/clearsansbold"
            android:text="Mobile Number"
            android:textColor="@color/colorAccent"
            android:textSize="18sp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
           android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:layout_marginTop="20dp"

            android:background="@drawable/spinner_back"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"


                android:layout_height="wrap_content"
                android:fontFamily="@font/clearsansbold"
                android:text="+91"
                android:textColor="#000"
                android:textSize="15sp" />

            <EditText
                android:id="@+id/input_mobile"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginLeft="5dp"
                android:background="@drawable/edit_mobile_back"
                android:fontFamily="@font/clearsansbold"
                android:hint="Enter Your Mobile Number"
                android:inputType="phone"
                android:maxLength="10"
                android:textSize="15sp" />
        </LinearLayout>
        <!--  <com.bachors.prefixinput.EditText
            android:id="@+id/input_mobile"
            android:text="+91"
            android:textSize="15sp"
            android:fontFamily="@font/clearsansbold"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="50dp"
            android:layout_marginRight="50dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="phone" />-->
        <TextView

            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:fontFamily="@font/clearsansbold"
            android:text="Don't use such a big line please keep it limited to the size required.Also\n
Bring the thing in center"
            android:textColor="#000"
            android:textSize="8sp"
            android:visibility="gone" />

        <Button
            android:id="@+id/goTo_submit"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:layout_marginTop="20dp"

            android:background="@drawable/coupon_button_back"
            android:fontFamily="@font/clearsansbold"
            android:text="Continue"
            android:textAllCaps="false"
            android:textColor="@color/white"
            android:textSize="25sp" />
        <TextView
            android:id="@+id/term_condition"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="10dp"
            android:fontFamily="@font/clearsansbold"

            android:gravity="center"
            android:text="@string/normal_string"
            android:textSize="11sp" />
    </LinearLayout>

</LinearLayout>