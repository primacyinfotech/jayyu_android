                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <LinearLayout
                        android:orientation="vertical"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content">
                        <TextView
                            android:text="Height"
                            android:textColor="@color/colorAccent"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content">

                        </TextView>
                        <LinearLayout
                            android:orientation="horizontal"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content">
                            <!--<EditText
                                android:id="@+id/height"
                                android:layout_width="195dp"
                                android:layout_height="wrap_content">

                            </EditText>-->
                            <RelativeLayout
                                android:orientation="vertical"
                                android:layout_width="98dp"
                                android:layout_height="wrap_content">
                                <EditText
                                    android:id="@+id/ft"
                                    android:layout_width="98dp"
                                    android:inputType="number"
                                    android:maxLength="1"
                                    android:layout_height="wrap_content"
                                    android:layout_gravity="center"
                                    />
                                <TextView
                                    android:id="@+id/text_hint_ft"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_alignParentRight="true"
                                    android:layout_centerVertical="true"
                                    android:text="ft"

                                    android:textSize="18sp"
                                    android:layout_marginRight="25dp"
                                    android:textColor="#808080"
                                    />
                            </RelativeLayout>
                            <RelativeLayout
                                android:orientation="vertical"
                                android:layout_width="98dp"
                                android:layout_height="wrap_content">
                                <EditText
                                    android:id="@+id/inch"
                                    android:layout_width="98dp"
                                    android:maxLength="2"
                                    android:inputType="number"
                                    android:layout_height="wrap_content"
                                    android:layout_gravity="center"
                                    />
                                <TextView
                                    android:id="@+id/text_hint_inch"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_alignParentRight="true"
                                    android:layout_centerVertical="true"
                                    android:text="inch"

                                    android:textSize="18sp"
                                    android:layout_marginRight="25dp"
                                    android:textColor="#808080"
                                    />
                            </RelativeLayout>
                        </LinearLayout>
                    </LinearLayout>
                    <LinearLayout
                        android:orientation="vertical"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content">
                        <TextView
                            android:text="Weight"
                            android:textColor="@color/colorAccent"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content">

                        </TextView>
                        <!-- <EditText
                             android:id="@+id/weight"
                             android:layout_width="195dp"
                             android:layout_height="wrap_content">

                         </EditText>-->
                        <RelativeLayout
                            android:orientation="vertical"
                            android:layout_width="195dp"
                            android:layout_height="wrap_content">
                            <EditText
                                android:id="@+id/weight"
                                android:layout_width="195dp"
                                android:inputType="number"
                                android:maxLength="3"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center"
                                />
                            <TextView
                                android:id="@+id/text_hint_weight"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_alignParentRight="true"
                                android:layout_centerVertical="true"
                                android:text="kg"

                                android:textSize="18sp"
                                android:layout_marginRight="100dp"
                                android:textColor="#808080"
                                />
                        </RelativeLayout>

                    </LinearLayout>
                </LinearLayout>
                <TextView
                    android:textColor="@color/colorAccent"
                    android:text="Medical Condition"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">

                </TextView>
                <EditText
                    android:id="@+id/medical_condition"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                </EditText>
                <TextView
                    android:textColor="@color/colorAccent"
                    android:text="Allergies and Reaction"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">

                </TextView>
                <EditText
                    android:id="@+id/reaction"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                </EditText>
                <TextView
                    android:textColor="@color/colorAccent"
                    android:text="Medication"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">

                </TextView>
                <EditText
                    android:id="@+id/medication"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                </EditText>
                <Button
                    android:id="@+id/view_prescrip"
                    android:layout_margin="10dp"
                    android:text="Medical Prescription and Report"
                    android:textAllCaps="false"
                    android:visibility="gone"
                    android:textColor="@color/white"
                    android:background="@color/colorAccent"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                </Button>
                <LinearLayout
                    android:background="@color/light_gray"
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="100dp">
                    <LinearLayout
                        android:layout_marginTop="20dp"
                        android:layout_marginLeft="10dp"
                        android:orientation="horizontal"

                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">
                        <TextView
                            android:textColor="#000"
                            android:text="Emergency Contact 1"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content">
                        </TextView>
                        <TextView
                            android:id="@+id/add_con_one"
                            android:text="Add from Contact"
                            android:textColor="@color/colorAccent"
                            android:layout_marginLeft="50dp"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content">

                        </TextView>

                    </LinearLayout>
                    <LinearLayout
                        android:layout_marginTop="20dp"
                        android:layout_marginLeft="10dp"
                        android:orientation="horizontal"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">
                        <TextView
                            android:textColor="#000"
                            android:text="Emergency Contact 2"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content">
                        </TextView>
                        <TextView
                            android:id="@+id/add_con_two"
                            android:text="Add from Contact"
                            android:textColor="@color/colorAccent"
                            android:layout_marginLeft="50dp"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content">

                        </TextView>

                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>
        </ScrollView>
    </androidx.cardview.widget.CardView>
    <Button
        android:id="@+id/update_btn"
        android:textSize="20dp"
        android:textColor="@color/white"
        android:text="Update Patient"
        android:layout_gravity="center"
        android:background="@color/colorAccent"
        android:fontFamily="@font/clearsansbold"
        android:layout_width="match_parent"
        android:layout_height="50dp" />
</LinearLayout>