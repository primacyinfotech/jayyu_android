<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:background="@color/white"
    android:layout_margin="10dp"

    android:layout_height="wrap_content">
<LinearLayout

    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="120dp">
    <ImageView
        android:layout_marginLeft="10dp"
        android:layout_marginTop="15dp"
        android:background="@drawable/corner_round_button"
        android:layout_width="20dp"
        android:layout_height="20dp">
    </ImageView>
    <LinearLayout
        android:orientation="vertical"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="10dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/doc_head"
            android:text="Prescription Heading"
            android:textSize="15dp"
            android:fontFamily="@font/clearsansbold"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

        </TextView>
        <TextView
            android:id="@+id/doc_date"
            android:text="Prescription Heading"
            android:textSize="13dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

        </TextView>
    </LinearLayout>

    <ImageView
        android:id="@+id/pres_display"
        android:layout_width="150dp"
        android:layout_height="150dp"

        android:layout_marginLeft="80dp"
        android:elevation="10dp">

    </ImageView>

</LinearLayout>
    <Button
        android:id="@+id/pres_del"
        android:background="@color/red"
        android:text="Delete"
        android:elevation="10dp"
        android:textColor="@color/white"
        android:textAllCaps="false"
        android:layout_marginLeft="20dp"
        android:layout_width="wrap_content"
        android:layout_height="30dp">

    </Button>
<View
    android:layout_marginTop="10dp"
    android:background="@color/light_gray"
    android:layout_width="match_parent"
    android:layout_height="2dp">

</View>
</LinearLayout>