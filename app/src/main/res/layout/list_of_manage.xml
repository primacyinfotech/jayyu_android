<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <LinearLayout
        android:id="@+id/layout_address"
        android:orientation="vertical"
        android:layout_margin="10dp"
        android:background="@drawable/border_coupon_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:layout_marginTop="10dp"
            android:orientation="horizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <ImageView
                android:id="@+id/add_loc"
                android:src="@drawable/ic_belon_location"
                android:layout_width="32dp"
                android:layout_height="32dp" />
            <TextView
                android:id="@+id/pref_add"
                android:text="Home"
                android:textColor="#000"
                android:textSize="18sp"
                android:fontFamily="@font/clearsansbold"
                android:layout_marginLeft="10dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

        </LinearLayout>
        <TextView
            android:id="@+id/name"
            android:textColor="#000"
            android:textSize="16sp"
            android:text="Suman Sardar"
            android:layout_marginLeft="40dp"
            android:layout_marginTop="20dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />


        <TextView
            android:id="@+id/address"
            android:textColor="#000"
            android:textSize="15sp"
            android:text="Dhamua \n Baruipur,North 24 Pgs\n Kolkata 700010 \n 9874582098"
            android:layout_marginLeft="40dp"
            android:layout_marginTop="5dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <TextView
            android:id="@+id/address_land"
            android:layout_marginTop="5dp"
            android:textColor="#000"
            android:textSize="15dp"
            android:layout_marginLeft="40dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <TextView
            android:id="@+id/address_zipt"
            android:textColor="#000"
            android:layout_marginTop="5dp"
            android:textSize="15dp"
            android:layout_marginLeft="40dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <TextView
            android:id="@+id/address_phone"
            android:textColor="#000"
            android:layout_marginTop="5dp"
            android:textSize="15dp"
            android:layout_marginLeft="40dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <LinearLayout
            android:id="@+id/delete_address"
            android:layout_marginTop="10dp"

            android:orientation="horizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <ImageView
                android:src="@drawable/ic_delete_forever"
                android:layout_marginLeft="20dp"
                android:layout_width="32dp"
                android:layout_height="32dp" />
            <TextView
                android:text="Remove"
                android:layout_gravity="center"
                android:textSize="16dp"
                android:textColor="#000"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <TextView
                android:id="@+id/edit_add"

                android:textSize="16sp"
                android:text="Edit"
                android:textColor="#000"
                android:drawableLeft="@drawable/icedit"
                android:layout_marginLeft="120dp"
                android:layout_marginTop="5dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </LinearLayout>
    </LinearLayout>
</LinearLayout>