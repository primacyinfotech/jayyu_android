<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".DeliverySubscription">
    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="?attr/colorPrimary"
        app:popupTheme="@style/AppTheme.PopupOverlay" >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <ImageView
                android:id="@+id/back_button"
                android:layout_gravity="center"
                android:src="@drawable/ic_action_back_arrow"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <TextView
                android:layout_gravity="center"
                android:textColor="#fff"
                android:layout_marginLeft="15dp"
                android:text="Delivery Subscription"
                android:textSize="22sp"
                android:fontFamily="@font/clearsansbold"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

        </LinearLayout>
    </androidx.appcompat.widget.Toolbar>
   <ScrollView
       android:layout_width="match_parent"
       android:layout_height="510dp">
       <LinearLayout
           android:orientation="vertical"
           android:layout_width="match_parent"
           android:layout_height="510dp">
           <TextView
               android:layout_marginTop="20dp"
               android:layout_marginLeft="10dp"
               android:text="Selected Delivery interval"
               android:textColor="#000"
               android:textSize="20dp"
               android:fontFamily="@font/clearsansbold"
               android:layout_width="wrap_content"
               android:layout_height="wrap_content" />
           <View
               android:background="@color/light_gray"
               android:layout_width="match_parent"
               android:layout_height="2dp">

           </View>
           <RadioGroup
               android:id="@+id/radio_grp_one"
               android:layout_width="match_parent"
               android:layout_height="wrap_content"

               android:orientation="vertical">
               <RadioButton
                   android:id="@+id/selected_one"
                   android:layout_marginLeft="10dp"
                   android:text="One Time Order"
                   android:textSize="18sp"
                   android:fontFamily="@font/clearsansbold"
                   android:layout_width="wrap_content"
                   android:checked="true"
                   android:layout_height="wrap_content" />
               <View
                   android:layout_marginTop="10dp"
                   android:background="@color/light_gray"
                   android:layout_width="match_parent"
                   android:layout_height="2dp">

               </View>
               <RadioButton
                   android:id="@+id/selected_every_thirty"
                   android:layout_marginLeft="10dp"
                   android:text="Repeat Every 30 Days"
                   android:textSize="18sp"
                   android:fontFamily="@font/clearsansbold"
                   android:layout_width="wrap_content"
                   android:checked="false"
                   android:layout_height="wrap_content" />
               <View
                   android:layout_marginTop="10dp"
                   android:background="@color/light_gray"
                   android:layout_width="match_parent"
                   android:layout_height="2dp">

               </View>
               <RadioButton
                   android:id="@+id/selected_every_fortyfive"
                   android:layout_marginLeft="10dp"
                   android:text="Repeat Every 45 Days"
                   android:textSize="18sp"
                   android:fontFamily="@font/clearsansbold"
                   android:layout_width="wrap_content"
                   android:checked="false"
                   android:layout_height="wrap_content" />
               <View
                   android:layout_marginTop="10dp"
                   android:background="@color/light_gray"
                   android:layout_width="match_parent"
                   android:layout_height="2dp">

               </View>
               <RadioButton
                   android:id="@+id/selected_every_sixty"
                   android:layout_marginLeft="10dp"
                   android:text="Repeat Every 60 Days"
                   android:textSize="18sp"
                   android:fontFamily="@font/clearsansbold"
                   android:layout_width="wrap_content"
                   android:checked="false"
                   android:layout_height="wrap_content" />
               <View
                   android:layout_marginTop="10dp"

                   android:background="@color/light_gray"
                   android:layout_width="match_parent"
                   android:layout_height="2dp">

               </View>

               <LinearLayout
                   android:orientation="horizontal"
                   android:layout_width="match_parent"
                   android:layout_height="wrap_content">

                   <CheckBox
                       android:id="@+id/selected_single_day"
                       android:layout_width="wrap_content"
                       android:layout_height="22dp"
                       android:layout_gravity="center"
                       android:layout_marginLeft="10dp"
                       android:checked="false"
                       android:fontFamily="@font/clearsansbold"
                       android:textSize="18sp" />
                   <TextView

                       android:layout_marginLeft="10dp"
                       android:text="Repeat Every"
                       android:layout_gravity="center"
                       android:fontFamily="@font/clearsansbold"
                       android:textSize="15sp"
                       android:textColor="#000"

                       android:layout_width="wrap_content"
                       android:layout_height="wrap_content" />
                   <EditText
                       android:id="@+id/custom_day_edit"
                       android:layout_marginTop="10dp"
                      android:background="@drawable/border_coupon_text"
                       android:layout_marginLeft="5dp"
                       android:layout_width="80dp"
                       android:hint="60"
                       android:gravity="center"
                       android:layout_height="40dp" />
                   <TextView

                       android:layout_marginLeft="10dp"
                       android:text="Days"
                       android:layout_gravity="center"
                       android:fontFamily="@font/clearsansbold"
                       android:textSize="15sp"
                       android:textColor="#000"
                       android:layout_width="wrap_content"
                       android:layout_height="wrap_content" />
                 <!--  <ImageButton
                       android:layout_marginTop="10dp"
                       android:id="@+id/selected_customer"
                       android:layout_marginLeft="100dp"
                       android:textSize="18sp"
                       android:background="@drawable/rigth_arrow"
                       android:fontFamily="@font/clearsansbold"
                       android:layout_width="wrap_content"
                       android:checked="false"
                       android:visibility="gone"
                       android:layout_height="wrap_content" />-->
               </LinearLayout>
               <View
                   android:layout_marginTop="10dp"

                   android:background="@color/light_gray"
                   android:layout_width="match_parent"
                   android:layout_height="2dp">

               </View>
           </RadioGroup>
           <LinearLayout
              android:id="@+id/custom_part_delivery"
               android:orientation="vertical"
               android:layout_width="match_parent"

               android:layout_height="wrap_content">
               <TextView
                   android:layout_marginTop="20dp"
                   android:layout_marginLeft="10dp"
                   android:text="Number of Delivery"
                   android:textColor="#000"
                   android:textSize="20dp"
                   android:fontFamily="@font/clearsansbold"
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content" />
               <View
                   android:layout_marginTop="10dp"

                   android:background="@color/light_gray"
                   android:layout_width="match_parent"
                   android:layout_height="2dp">

               </View>
               <RadioGroup
                   android:id="@+id/radio_grp_three"
                   android:layout_width="match_parent"
                   android:layout_height="wrap_content">
                   <RadioButton
                   android:id="@+id/selected_three_delivery"
                   android:layout_marginLeft="10dp"
                   android:text="3 Deliveries"
                   android:textSize="18sp"
                   android:fontFamily="@font/clearsansbold"
                   android:layout_width="wrap_content"
                   android:checked="false"
                   android:layout_height="wrap_content" />
                   <View
                       android:layout_marginTop="10dp"

                       android:background="@color/light_gray"
                       android:layout_width="match_parent"
                       android:layout_height="2dp">

                   </View>
                   <RadioButton
                       android:id="@+id/selected_six_delivery"
                       android:layout_marginLeft="10dp"
                       android:text="6 Deliveries"
                       android:textSize="18sp"
                       android:fontFamily="@font/clearsansbold"
                       android:layout_width="wrap_content"
                       android:checked="false"
                       android:layout_height="wrap_content" />
                   <View
                       android:layout_marginTop="10dp"

                       android:background="@color/light_gray"
                       android:layout_width="match_parent"
                       android:layout_height="2dp">

                   </View>
               </RadioGroup>
               <LinearLayout
                   android:id="@+id/extra_custom"
                   android:orientation="horizontal"
                   android:layout_width="match_parent"
                   android:layout_height="wrap_content">
                   <TextView

                       android:layout_marginLeft="30dp"
                       android:text="Customize"
                       android:layout_gravity="center"
                       android:fontFamily="@font/clearsansbold"
                       android:textSize="15sp"
                       android:textColor="#000"
                       android:layout_width="wrap_content"
                       android:layout_height="wrap_content" />
                   <EditText
                       android:id="@+id/custom_num_edit"
                       android:layout_marginTop="10dp"
                       android:background="@drawable/border_coupon_text"
                       android:layout_marginLeft="55dp"
                       android:layout_width="80dp"
                       android:hint="60"
                       android:gravity="center"
                       android:layout_height="40dp" />
                   <TextView

                       android:layout_marginLeft="10dp"
                       android:text="Deliverise"
                       android:layout_gravity="center"
                       android:fontFamily="@font/clearsansbold"
                       android:textSize="15sp"
                       android:textColor="#000"
                       android:layout_width="wrap_content"
                       android:layout_height="wrap_content" />
                   <ImageButton
                       android:layout_marginTop="10dp"
                       android:id="@+id/selected_customize"
                       android:layout_marginLeft="100dp"
                       android:textSize="18sp"
                       android:background="@drawable/rigth_arrow"
                       android:fontFamily="@font/clearsansbold"
                       android:layout_width="wrap_content"
                       android:checked="false"
                       android:visibility="gone"
                       android:layout_height="wrap_content" />
               </LinearLayout>
           </LinearLayout>
